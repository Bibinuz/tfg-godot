{
  "languages": {
    "LaTeX": {
      "language_servers": ["texlab"],
      "format_on_save": "on",
    },
  },
  "lsp": {
    "texlab": {
      "initialization_options": {
        "build": {
          "executable": "latexmk",
          "args": ["-pdf", "-interaction=nonstopmode", "-synctex=1", "%f"],
          "onSave": true,
        },
        "forwardSearch": {
          "executable": "zathura",
          "args": ["--synctex-forward", "%l:1:%f", "%p"],
        },
      },
    },
  },
}
